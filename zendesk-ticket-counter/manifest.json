{
  "manifest_version": 3,
  "name": "Zendesk High Alert Counter",
  "version": "1.0",
  "description": "Displays the number of High Alert tickets from Zendesk on the extension badge.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.zendesk.com/agent/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "minimum_chrome_version": "88"
}